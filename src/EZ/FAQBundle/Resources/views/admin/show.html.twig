{% extends "EZCoreBundle:admin/Layout:admin.html.twig" %}

{% block head_admin %}
    <link rel="stylesheet" href="{{ asset('css/dropzone.css') }}">
{% endblock %}
{% block admin_body %}    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                F.A.Q
                <small>Gestion de la foire aux questions</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-10">
                    <div class="box box-default" data-vivaldi-spatnav-clickable="1">
                        <div class="box-header with-border">
                            <h3 class="box-title"><a href="{{ path('ez_faq_admin_list') }}"><i class="fa fa-chevron-left"></i></a> |  Gérer une question/réponse</h3><p class="pull-right"><b>ID: </b>{{ question.id }}</p>
                        </div>
                        <div class="box-body">
                            <h5><b>Question: </b></h5>
                                <p style="text-indent: 20px;">{{ question.question }}</p>

                            <h5><b>Réponse: </b></h5>
                                <p style="text-indent: 20px;">{{ question.answer }}</p>


                            {{ form_start(delete_form) }}
                            <br>
                            <br>
                            <button class="btn btn-danger inline" type="submit"><i class="fa fa-trash-o"></i> Supprimer</button>
                            <a class="btn btn-warning inline" href="{{ path('ez_faq_admin_edit', {id : question.id}) }}" role="button"><i class="fa fa-edit" aria-hidden="true"></i>Modifier</a>
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
