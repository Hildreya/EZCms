{% extends "EZCoreBundle:default/Layout:"~ template ~".html.twig" %}

{% block title %}
    Profil - {{ parent() }}
{% endblock %}

{% block extaz_body %}
    <div class="container-site">
        <div class="rows">
            <div class="col-md-12">
                <div class="content">
                    <div class="title-log">Mon profil</div>
                    <hr />
                    {% trans_default_domain 'FOSUserBundle' %}

                    <div class="fos_user_user_show">
                        <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
                        <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
                    </div>
                    <hr />
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <input class="button-green" type="submit" value="Editer" />
                    {{ form_end(edit_form) }}
                    <hr />
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div>
                        <input class="button-green" type="submit" value="{{ 'change_password.submit'|trans }}" />
                    </div>
                    {{ form_end(form) }}

                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
