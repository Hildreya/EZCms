{% extends "EZCoreBundle:Layout/office:red.html.twig" %}

{% block title %}
    Connexion - {{ parent() }}
{% endblock %}

{% block extaz_body %}
    <div class="container-site">
        <div class="rows">
            <div class="col-md-6">
                <div class="content">
                    <div class="title-log">Se connecter</div>

                    {% trans_default_domain 'FOSUserBundle' %}

                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="form-group mt10">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" class="form-control" id="password" name="_password" required="required" />
                        </div>
                        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a><br>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        <input type="submit" class="button-green right" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </form>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}