{% extends "EZCoreBundle:admin/Layout:admin.html.twig" %}

{% block title %}
    Gestion des groupes - {{ parent() }}
{% endblock %}

{% block admin_body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Liste des groupes
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Your Page Content Here -->

            <table id="articleTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Nom du groupe</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>...</th>
                        <th><a href="{{ path('ez_group_admin_add') }}"><i class="fa fa-plus-square" aria-hidden="true" style="color: green;"></i></a></th>
                    </tr>
                </tfoot>
                <tbody>
                {% for group in groups %}
                    <tr>
                        <td>{{ group.getName() }}</td>
                        <td>
                            <a type="button" class="btn btn-primary" href="{{ path('ez_group_admin_edit',{'id': group.id}) }}">
                                <i class="fa fa-cogs" aria-hidden="true"></i>
                            </a>
                            <a href="{{ path('ez_group_admin_delete', {'id': group.id}) }}" type="button" class="btn btn-danger" onclick="return confirm('Voulez-vous vraiment supprimer ce rang ?')">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}

{% block javascript %}

    <script src="{{ asset('plugins/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('plugins/datatables/dataTables.bootstrap.js') }}"></script>

    <script type="application/javascript">
        $(function () {
            $('#articleTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                },
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
{% endblock %}