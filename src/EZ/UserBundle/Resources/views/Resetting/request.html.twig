{% extends "EZCoreBundle:default/Layout:"~ template ~".html.twig" %}
{% block title %}
    Réinitialiser mon mot de passe - {{ parent() }}
{% endblock %}

{% block extaz_body %}
    <div class="container-site">
        <div class="rows">
            <div class="col-md-12">
                <div class="content">
                    <div class="title-log">Réinitialiser mon mot de passe</div>
                    {% trans_default_domain 'FOSUserBundle' %}

                    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                        <div class="form-group mt10">
                            <label for="username">{{ 'resetting.request.username'|trans }}</label>
                            <input type="text" class="form-control" id="username" name="username" required="required" />
                        </div>
                        <div class="form-group mt10">
                            <input type="submit" class="button-green right" value="{{ 'resetting.request.submit'|trans }}" />
                        </div>
                    </form>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
