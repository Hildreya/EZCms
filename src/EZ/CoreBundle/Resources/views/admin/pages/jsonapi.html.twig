{% extends "EZCoreBundle:admin/Layout:admin.html.twig" %}
{% block admin_body %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            JSONAPI
            <small>liaison du site avec le serveur minecraft</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            {% for type, flash_messages in app.session.flashBag.all %}
                {% for flash_message in flash_messages %}
                    <div class="alert alert-{{ type }} alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-check"></i> {{ type }}</h4>
                        {{ flash_message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="col-md-8">
                {% for server in jsonapi_servers  %}
                    {% if server.status == null %}
                        <div class="box box-danger collapsed-box">
                            <div class="box-header with-border">
                                <h3 class="box-title">{{ server.jsonapi.ip }} | Eteint</h3>

                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                                    </button>
                                </div>
                                <!-- /.box-tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <a href="{{ path('ez_core_jsonapi_delete', {'id': server.jsonapi.id }) }}"><button type="button" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i>Supprimer</button></a>
                            </div>
                            <!-- /.box-body -->
                        </div>
                    {% else %}
                        <div class="box box-success collapsed-box">
                            <div class="box-header with-border">
                                <h3 class="box-title">{{ server.jsonapi.ip }}     |  {{ server.status.players|length }} / {{ server.status.maxPlayers }}</h3>

                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                                    </button>
                                </div>
                                <!-- /.box-tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <a href="{{ path('ez_core_jsonapi_delete', {'id': server.jsonapi.id }) }}"><button type="button" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i>Supprimer</button></a>
                            </div>
                            <!-- /.box-body -->
                        </div>
                    {% endif %}
                {% endfor %}
            </div>

            <div class="col-md-4">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Enregistrer un nouveau serveur</h3>
                    </div>

                    {{ form_start(form) }}
                    <div class="box-body">

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-server"></i></span>
                            {{ form_widget(form.ip) }}
                        </div>
                        <br>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-server"></i></span>
                            {{ form_widget(form.port) }}
                        </div>
                        <br>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user-o"></i></span>
                            {{ form_widget(form.username) }}
                        </div>
                        <br>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            {{ form_widget(form.password) }}
                        </div>
                        <br>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-sort-numeric-asc"></i></span>
                            {{ form_widget(form.position) }}
                        </div>
                        <p>Organisation par ordre décroisant.</p>
                        <p>(Position 0: serveur principal (ex: Hub...))</p>
                        <br>


                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        {{ form_widget(form.submit) }}
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
{% endblock %}
