{% extends "EZCoreBundle:admin/Layout:admin.html.twig" %}

{% block head_admin %}
    <link rel="stylesheet" href="{{ asset('css/dropzone.css') }}">
{% endblock %}

{% block title %}
    Configuration - {{ parent() }}
{% endblock %}

{% block admin_body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Paramètres principaux
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    {% for type, flash_messages in app.session.flashBag.all %}
                        {% for flash_message in flash_messages %}
                            <div class="alert alert-{{ type }} alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4><i class="icon fa fa-check"></i> {{ type }}</h4>
                                {{ flash_message|raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#general" data-toggle="tab" aria-expanded="true">General</a></li>
                            <li><a href="#reglement_ajax_form" data-toggle="tab" aria-expanded="false" class="ajax-form-link">Réglement</a></li>
                            <li><a href="#legal_ajax_form" data-toggle="tab" aria-expanded="false" class="ajax-form-link">Légal</a></li>
                            <li><a href="#social_ajax_form" data-toggle="tab" aria-expanded="false" class="ajax-form-link">Réseaux Sociaux</a></li>
                            <li><a href="#option_ajax_form" data-toggle="tab" aria-expanded="false">Options</a></li>
                        </ul>
                        <div class="tab-content">

                            <div class="tab-pane active" id="general">
                                <div class="container-fluid">
                                {{ form_start(general_form) }}
                                <div class="col-md-8">
                                    <div class="form-group">{{ form_row(general_form.server_name) }}</div>
                                    <div class="form-group">{{ form_row(general_form.info_site_url) }}</div>
                                    <div class="form-group">{{ form_row(general_form.presentation) }}</div>
                                    <div class="form-group">{{ form_row(general_form.server_ip) }}</div>
                                    <div class="form-group">{{ form_row(general_form.server_port) }}</div>
                                    <div class="form-group">{{ form_row(general_form.mailer_user) }}</div>

                                    <div class="form-group">{{ form_row(general_form.submit) }}</div>
                                </div>
                                <div class="col-md-4">
                                    <div class="row"><div class="form-group">{{ form_row(general_form.info_logo) }}</div></div>
                                    <div class="row"><div class="form-group">{{ form_row(general_form.info_banner) }}</div></div>
                                    <div class="row"><div class="form-group">{{ form_row(general_form.info_favicon) }}</div></div>
                                </div>

                                {{ form_end(general_form) }}
                            </div>
                            </div>
                            <!-- /.tab-pane -->

                            <div class="tab-pane" id="reglement_ajax_form">

                            </div>
                            <!-- /.tab-pane -->

                            <div class="tab-pane" id="legal_ajax_form">

                            </div>
                            <!-- /.tab-pane -->

                            <div class="tab-pane" id="social_ajax_form">

                            </div>
                            <!-- /.tab-pane -->

                            <div class="tab-pane" id="option_ajax_form">

                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
{% endblock %}

{% block javascript %}

    <script src="{{ asset('js/dropzone.js') }}"></script>
    <script type="text/javascript">

    </script>
{% endblock %}
