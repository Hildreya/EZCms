{% extends "EZCoreBundle:admin/Layout:admin.html.twig" %}
{% block admin_body %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            JSONAPI
            <small>liaison du site avec le serveur minecraft</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-8">
                {% if server == null %}
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">Serveur Minecraft</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <p style="text-align:center;"><span style="color:#dd4b39;font-weight:bold;">Echec de la connexion au serveur minecraft.
                        Celui-ci est �teint ou les informations fournies ne sont pas valables.</span></p>
                        <br><br>
                        <ul>
                            <li>IP : {{ jsonapi.jsonapi_ip }}</li>
                            <li>Port : {{ jsonapi.jsonapi_port }}</li>
                        </ul>
                        <br>
                        <br>
                        <button type="button" class="btn btn-danger">R�essayer</button>
                    </div>
                    <!-- /.box-body -->
                </div>
                {% else %}
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Serveur Minecraft</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <p style="text-align:center;"><span style="color:#00a65a;font-weight:bold;">Liaison réussie</span></p>
                        <ul>
                            <li>IP : {{ jsonapi.jsonapi_ip }}</li>
                            <li>Port : {{ jsonapi.jsonapi_port }}</li>
                        </ul>
                        <h3>Nom :</h3>
                        {{ server.serverName }}
                        <h3>Version :</h3>
                        {{ server.version }}
                    </div>
                    <!-- /.box-body -->
                </div>
                {% endif %}
            </div>

            <div class="col-md-4">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Modifier informations JSONAPI</h3>
                    </div>

                    {% for type, flash_messages in app.session.flashBag.all %}
                        {% for flash_message in flash_messages %}
                            <div class="flash-{{ type }}">
                                {{ flash_message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form) }}
                    <div class="box-body">

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-server"></i></span>
                            {{ form_widget(form.jsonapi_ip) }}
                        </div>
                        <br>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-server"></i></span>
                            {{ form_widget(form.jsonapi_port) }}
                        </div>
                        <br>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user-o"></i></span>
                            {{ form_widget(form.jsonapi_username) }}
                        </div>
                        <br>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            {{ form_widget(form.jsonapi_password) }}
                        </div>
                        <br>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            {{ form_widget(form.jsonapi_salt) }}
                        </div>
                        <br>


                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        {{ form_widget(form.jsonapi_save) }}
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
{% endblock %}
