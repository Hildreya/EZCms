{% for bundle in bundles %}

    {% if bundle['default']['display'] == true %}
        {% if bundle['default']|length - 3 > 0 %}
            <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    {{ bundle['default']['name'] }}
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        {% for i in 0..bundle['default']|length - 4 %}

                        <a href="{{ bundle['default'][i]['path'] }}">{{ bundle['default'][i]['name'] }}</a>

                        {% endfor %}
                    </li>
                </ul>
            </li>
        {% else %}
            <li><a href="{{ bundle['default']['path'] }}">{{ bundle['default']['name'] }}</a></li>
        {% endif %}
    {% endif %}

{% endfor %}